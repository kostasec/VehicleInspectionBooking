@section Styles{

    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
}
@model Termin

<!-- Add Modal -->
<div class="modal fade" id="AddModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Dodaj termin</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" asp-action="Create" asp-controller="Termin" id="addForm">
                    <div class="form-group">

                        <label asp-for="ime" style="font-weight:bold;"></label><input asp-for="ime" id="ime" class="form-control" type="text" placeholder="Ime" />
                        <span asp-validation-for="ime" class="text-danger"></span>
                        <label asp-for="prezime" style="font-weight:bold;"></label><input id="prezime" asp-for="prezime" class="form-control" type="text" placeholder="Prezime" />
                        <span asp-validation-for="prezime" class="text-danger"></span>
                        <label asp-for="email" style="font-weight:bold;"></label> <input asp-for="email" id="email" class="form-control" type="text" placeholder="Email" />
                        <span asp-validation-for="email" class="text-danger"></span>

                        <label asp-for="datum" style="font-weight:bold;"></label><input asp-for="datum" id="datum" class="form-control" type="text" placeholder="Datum" />
                        <span asp-validation-for="datum" class="text-danger"></span>
                        <label asp-for="brojTelefona" style="font-weight:bold;"></label><input asp-for="brojTelefona" id="brojTelefona" class="form-control" type="text" placeholder="Broj telefona" />
                        <span asp-validation-for="brojTelefona" class="text-danger"></span>
                        <label asp-for="status" style="font-weight:bold;"></label><input asp-for="status" id="status" class="form-control" type="text" placeholder="Status" />
                        <span asp-validation-for="status" class="text-danger"></span>
                        <label asp-for="reg_oznaka" style="font-weight:bold;"></label><input asp-for="reg_oznaka" id="reg_oznaka" class="form-control" type="text" placeholder="Registracija" />
                        <span asp-validation-for="reg_oznaka" class="text-danger"></span>

                    </div>
                    <div class="pt-3"style="float:right">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Zatvori</button>
                        <button type="submit" class="btn btn-primary">Sacuvaj</button>
                    </div>
                </form>
            </div>
           
        </div>
    </div>
</div>


<!-- Edit MODAL-->

<div class="modal fade" id="EditModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Izmeni termin</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="Update" asp-controller="Termin" method="post" id="EditForm">
                    <div class="form-group">
                        <input asp-for="id" id="prodid" hidden />
                        <label asp-for="ime" style="font-weight:bold;"></label><input asp-for="ime" id="Ime" class="form-control" type="text" placeholder="Ime" />
                        <span asp-validation-for="ime" class="text-danger"></span>
                        <label asp-for="prezime" style="font-weight:bold;"></label><input id="Prezime" asp-for="prezime" class="form-control" type="text" placeholder="Prezime" />
                        <span asp-validation-for="prezime" class="text-danger"></span>
                        <label asp-for="email" style="font-weight:bold;"></label> <input asp-for="email" id="Email" class="form-control" type="text" placeholder="Email" />
                        <span asp-validation-for="email" class="text-danger"></span>

                        <label asp-for="datum" style="font-weight:bold;"></label><input asp-for="datum" id="Datum" class="form-control" type="text" placeholder="Datum" />
                        <span asp-validation-for="datum" class="text-danger"></span>
                        <label asp-for="brojTelefona" style="font-weight:bold;"></label><input asp-for="brojTelefona" id="BrojTelefona" class="form-control" type="text" placeholder="Broj telefona" />
                        <span asp-validation-for="brojTelefona" class="text-danger"></span>
                        <label asp-for="status" style="font-weight:bold;"></label><input asp-for="status" id="Status" class="form-control" type="text" placeholder="Status" />
                        <span asp-validation-for="status" class="text-danger"></span>
                        <label asp-for="reg_oznaka" style="font-weight:bold;"></label><input asp-for="reg_oznaka" id="Reg_oznaka" class="form-control" type="text" placeholder="Registracija" />
                        <span asp-validation-for="reg_oznaka" class="text-danger"></span>
                    </div>
                    <div class="pt-3" style="float:right">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Zatvori</button>
                        <button type="submit" id="btnSave" class="btn btn-primary">Izmeni</button>
                    </div>
                </form>
            </div>
            
        </div>
    </div>
</div>

<!--Delete MODAL-->
<div class="modal fade" id="DeleteModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Izbrisi termin</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Da li ste sigurni?
            </div>
            <div class="modal-footer">
                <form asp-action="Delete" asp-controller="Termin" method="post">
                    <input id="deleteId" asp-for="id" hidden />
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Zatvori</button>
                <button type="submit" class="btn btn-primary">Izbrisi</button>
                </form>
                </div>
        </div>
    </div>
</div>

<div class="align-items-center text-center justify-content-center py-4">
    <h2>CONTENT MANAGMENT SYSTEM</h2><br />
    <nav class="main_nav">
        <ul class="list-inline">
            <li class="list-inline-item"><a asp-controller="CMS" asp-action="Index">Termini</a></li>
            <li class="list-inline-item"><a asp-controller="CMS" asp-action="UslugaView">Usluge</a></li>
            
        </ul>
    </nav>
</div>
<div class="text-center align-items-center justify-content-center">
    <table id="myTable" class="table-bordered display table-hover text-center" style="font-size:15px;width:100%;">
        <thead>
            <tr>
                <th>Id</th>
                <th>Ime</th>
                <th>Prezime</th>              
                <th>Email</th>
                <th>Datum</th>
                <th>Status</th>
                <th>Broj telefona</th>
                <th>Registracija</th>
                <th><button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#AddModal">Add</button></th>

            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
    </div>

